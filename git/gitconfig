[color]
    ui      = auto
    log     = auto
    diff 	= auto
    branch 	= auto
    status 	= auto
#
[color "branch"]
    local   = yellow
    remote  = green
    current = yellow reverse

[color "diff"]
    old     = red bold
    new     = green bold
    meta    = yellow bold
    frag    = magenta bold

[color "status"]
    added       = yellow
    changed     = green
    untracked   = cyan

[alias]
    ls      = ls-files
    st      = status
    ci      = commit
    br      = branch
    co      = checkout
    df      = diff
    dc      = diff --cached
#    lg      = log -p
